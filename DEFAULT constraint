
CREATE TABLE sells(
product_id INT,
product_name VARCHAR(30),
product_price DECIMAL(10,2),
sell_time DATETIME DEFAULT NOW() 
);
 // when i miss to enter a column value then i use DEAFULT
   it automaticly add a fixt value..if i use decimal then just 
    use decimal values in close of DEFAULT.

ALTER TABLE products 
ALTER price SET DEFAULT 0; //additional


